# SERVER

FROM ubuntu:latest
RUN apt -y update
RUN apt install -y net-tools inetutils-ping 
RUN apt install -y openjdk-21-jdk
RUN mkdir /app
COPY ChatServerServer.jar /app/

# PASSO A PASSO PARA RODAR O DOCKER E A APLICAÇÃO # 
# -> docker run -it chatserverserver # - (cria um container com a imagem chatserver)
# -> cd app # - (entra no diretório /app onde esta localizado o .jar)
# -> java -jar ChatServerServer.jar # - (executa a aplicação)